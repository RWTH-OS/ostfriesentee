import os

env = Environment(toolpath = [os.path.join('..', '..', 'scons')], tools = ['default', 'ostfriesentee'])

env.Architecture("amd64")
ostfriesentee = SConscript(['SConscript'], exports = 'env')

env.Default(ostfriesentee)
